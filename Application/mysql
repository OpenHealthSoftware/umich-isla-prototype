CREATE DATABASE kellogg;
USE DATABASE kellogg;

CREATE TABLE images(
	imgId CHAR(32) NOT NULL,
	format CHAR(3) NOT NULL,
	referenceName CHAR(250),
	eye CHAR(5) NOT NULL,
	comments TEXT,
	PRIMARY KEY(imgId)
);

CREATE TABLE grid(
	gridId CHAR(37) NOT NULL,
	xOffset DECIMAL(10,9) NOT NULL,
	yOffset DECIMAL(10,9) NOT NULL,
	imgId CHAR(32) NOT NULL,
	FOREIGN KEY(imgId) REFERENCES images(imgId)
);


CREATE TABLE normals(
	imgId CHAR(32) NOT NULL,
	format CHAR(3) NOT NULL,
	referenceName CHAR(250),
	eye CHAR(5) NOT NULL,
	comments TEXT,
	PRIMARY KEY(imgId)
);

